{
  "name": "profilecraft-backend",
  "version": "1.0.0",
  "description": "Backend API para ProfileCraft - Generador de CVs profesionales",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx server.ts",
    "build": "tsc --project tsconfig.server.json",
    "start": "node dist-server/server.js",
    "clean": "rmdir /s /q dist-server 2>nul || true",
    "rebuild": "npm run clean && npm run build",
    "dev:watch": "tsx --watch server.ts"
  },
  "dependencies": {
    "@types/multer": "^1.4.13",
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/nodemailer": "^6.4.17",
    "dotenv": "^16.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
